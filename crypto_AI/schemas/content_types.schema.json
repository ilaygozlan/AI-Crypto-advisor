{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "ContentType",
  "description": "Available content categories for user preferences",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique content type identifier"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50,
      "description": "Content type name"
    },
    "description": {
      "type": "string",
      "maxLength": 200,
      "description": "Content type description"
    },
    "icon": {
      "type": ["string", "null"],
      "description": "Unicode icon or emoji for the content type"
    },
    "isActive": {
      "type": "boolean",
      "description": "Whether the content type is available for selection"
    },
    "sortOrder": {
      "type": "integer",
      "minimum": 0,
      "description": "Display order for content type selection"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Content type creation timestamp"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    }
  },
  "required": ["id", "name", "description", "isActive", "sortOrder", "createdAt", "updatedAt"],
  "additionalProperties": false,
  "examples": [
