{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "PriceSnapshot",
  "description": "Cryptocurrency price data snapshot",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique price snapshot identifier"
    },
    "assetId": {
      "type": "string",
      "format": "uuid",
      "description": "Associated asset ID"
    },
    "symbol": {
      "type": "string",
      "minLength": 1,
      "maxLength": 10,
      "description": "Asset symbol for quick reference"
    },
    "currentPrice": {
      "type": "number",
      "minimum": 0,
      "description": "Current price in USD"
    },
    "priceChange24h": {
      "type": "number",
      "description": "24-hour price change in USD"
    },
    "priceChangePercentage24h": {
      "type": "number",
      "description": "24-hour price change percentage"
    },
    "volume24h": {
      "type": "number",
      "minimum": 0,
      "description": "24-hour trading volume in USD"
    },
    "marketCap": {
      "type": "number",
      "minimum": 0,
      "description": "Market capitalization in USD"
    },
    "sparkline": {
      "type": "array",
      "items": {
        "type": "number"
      },
      "minItems": 7,
      "maxItems": 7,
      "description": "7-day price sparkline data"
    },
    "snapshotAt": {
      "type": "string",
      "format": "date-time",
      "description": "Price snapshot timestamp"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Record creation timestamp"
    }
  },
  "required": ["id", "assetId", "symbol", "currentPrice", "priceChange24h", "priceChangePercentage24h", "snapshotAt", "createdAt"],
  "additionalProperties": false,
  "examples": [
    {
      "id": "110e8400-e29b-41d4-a716-446655440011",
      "assetId": "770e8400-e29b-41d4-a716-446655440002",
      "symbol": "BTC",
      "currentPrice": 45230.50,
      "priceChange24h": 1250.75,
      "priceChangePercentage24h": 2.85,
      "volume24h": 28500000000,
      "marketCap": 850000000000,
      "sparkline": [44000, 44200, 44500, 44800, 45000, 45100, 45230],
      "snapshotAt": "2024-01-15T14:30:00Z",
      "createdAt": "2024-01-15T14:30:00Z"
    }
  ]
}
