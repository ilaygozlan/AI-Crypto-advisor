{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "NewsItem",
  "description": "Cryptocurrency news article",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique news item identifier"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "News article title"
    },
    "summary": {
      "type": "string",
      "maxLength": 1000,
      "description": "Article summary or excerpt"
    },
    "url": {
      "type": "string",
      "format": "uri",
      "description": "Link to full article"
    },
    "source": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "News source name"
    },
    "publishedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Article publication timestamp"
    },
    "category": {
      "type": "string",
      "enum": ["market", "technology", "regulation", "adoption", "other"],
      "description": "News category classification"
    },
    "sentiment": {
      "type": "string",
      "enum": ["positive", "negative", "neutral"],
      "description": "AI-analyzed sentiment of the article"
    },
    "relevanceScore": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "AI-calculated relevance score"
    },
    "isActive": {
      "type": "boolean",
      "description": "Whether the news item is active and visible"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "News item creation timestamp"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    }
  },
  "required": ["id", "title", "summary", "url", "source", "publishedAt", "isActive", "createdAt", "updatedAt"],
  "additionalProperties": false,
  "examples": [
    {
      "id": "ee0e8400-e29b-41d4-a716-446655440009",
      "title": "Bitcoin Reaches New All-Time High as Institutional Adoption Grows",
      "summary": "Bitcoin has surged to unprecedented levels as major corporations continue to add the cryptocurrency to their balance sheets.",
      "url": "https://example.com/bitcoin-ath-news",
      "source": "CryptoNews",
      "publishedAt": "2024-01-15T10:30:00Z",
      "category": "market",
      "sentiment": "positive",
      "relevanceScore": 0.95,
      "isActive": true,
      "createdAt": "2024-01-15T10:30:00Z",
      "updatedAt": "2024-01-15T10:30:00Z"
    }
  ]
}
