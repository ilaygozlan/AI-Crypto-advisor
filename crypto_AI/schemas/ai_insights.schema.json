{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "AIInsight",
  "description": "AI-generated market insight and analysis",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "format": "uuid",
      "description": "Unique AI insight identifier"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 200,
      "description": "Insight title"
    },
    "content": {
      "type": "string",
      "minLength": 1,
      "maxLength": 2000,
      "description": "AI-generated insight content"
    },
    "type": {
      "type": "string",
      "enum": ["market_analysis", "trend_prediction", "risk_assessment", "opportunity_alert"],
      "description": "Type of AI insight"
    },
    "confidence": {
      "type": "number",
      "minimum": 0,
      "maximum": 1,
      "description": "AI confidence score for the insight"
    },
    "targetAssets": {
      "type": "array",
      "items": {
        "type": "string",
        "format": "uuid"
      },
      "description": "Asset IDs this insight is relevant for"
    },
    "sentiment": {
      "type": "string",
      "enum": ["bullish", "bearish", "neutral"],
      "description": "Overall market sentiment of the insight"
    },
    "generatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "When the insight was generated"
    },
    "expiresAt": {
      "type": ["string", "null"],
      "format": "date-time",
      "description": "When the insight expires (null for permanent)"
    },
    "isActive": {
      "type": "boolean",
      "description": "Whether the insight is active and visible"
    },
    "createdAt": {
      "type": "string",
      "format": "date-time",
      "description": "Record creation timestamp"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time",
      "description": "Last update timestamp"
    }
  },
  "required": ["id", "title", "content", "type", "confidence", "generatedAt", "isActive", "createdAt", "updatedAt"],
  "additionalProperties": false,
  "examples": [
    {
      "id": "220e8400-e29b-41d4-a716-446655440012",
      "title": "Market Sentiment Analysis: Bullish Momentum Building",
      "content": "Based on current market data and sentiment analysis, we're seeing strong bullish signals across major cryptocurrencies. The recent institutional adoption and regulatory clarity have created a positive feedback loop.",
      "type": "market_analysis",
      "confidence": 0.87,
      "targetAssets": ["770e8400-e29b-41d4-a716-446655440002", "880e8400-e29b-41d4-a716-446655440003"],
      "sentiment": "bullish",
      "generatedAt": "2024-01-15T08:00:00Z",
      "expiresAt": "2024-01-16T08:00:00Z",
      "isActive": true,
      "createdAt": "2024-01-15T08:00:00Z",
      "updatedAt": "2024-01-15T08:00:00Z"
    }
  ]
}
